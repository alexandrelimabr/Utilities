        <Label x:Name="label" Content="Image control mostrando imagem" HorizontalAlignment="Left" Height="27" Margin="10,60,0,0" VerticalAlignment="Top" Width="302"/>
        <Label x:Name="label_Copy" Content="Screenshot da tela inteira" HorizontalAlignment="Left" Height="27" Margin="330,60,0,0" VerticalAlignment="Top" Width="302"/>
